<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Ensure WebDAV doesn't intercept PUT/DELETE before rewrite -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>
    <handlers>
      <remove name="WebDAV" />
    </handlers>

    <!-- Allow all HTTP verbs so ARR can proxy PUT/DELETE/OPTIONS without 405 at FE site -->
    <security>
      <requestFiltering allowDoubleEscaping="true">
        <verbs allowUnlisted="true">
          <add verb="PUT" allowed="true" />
          <add verb="DELETE" allowed="true" />
          <add verb="PATCH" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>

    <!-- MIME types commonly produced by Vite builds -->
    <staticContent>
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <remove fileExtension=".webmanifest" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
      <remove fileExtension=".wasm" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
      <remove fileExtension=".mjs" />
      <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
      <remove fileExtension=".map" />
      <mimeMap fileExtension=".map" mimeType="application/json" />
      <remove fileExtension=".svg" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <remove fileExtension=".ico" />
      <mimeMap fileExtension=".ico" mimeType="image/x-icon" />
    </staticContent>

    <!-- Cache policy: cache hashed assets aggressively, avoid caching index.html -->
    <caching enabled="true" enableKernelCache="true">
      <profiles>
        <add extension=".html" policy="DontCache" kernelCachePolicy="DontCache" />
        <add extension=".js" policy="CacheForTimePeriod" duration="30.00:00:00" />
        <add extension=".mjs" policy="CacheForTimePeriod" duration="30.00:00:00" />
        <add extension=".css" policy="CacheForTimePeriod" duration="30.00:00:00" />
        <add extension=".wasm" policy="CacheForTimePeriod" duration="30.00:00:00" />
        <add extension=".svg" policy="CacheForTimePeriod" duration="30.00:00:00" />
        <add extension=".json" policy="CacheForTimePeriod" duration="01.00:00:00" />
        <add extension=".webmanifest" policy="CacheForTimePeriod" duration="01.00:00:00" />
      </profiles>
    </caching>

    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>

    <!-- Surface upstream API errors instead of generic IIS pages -->
    <httpErrors existingResponse="PassThrough" />

    <!-- API proxy (ARR required) + SPA fallback -->
    <rewrite>
      <rules>
        <!-- Reverse proxy API to avoid CORS: requires ARR + Proxy enabled on IIS -->
        <rule name="Proxy API to Backend" enabled="true" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="http://46.1.54.137:44/api/{R:1}" logRewrittenUrl="true" />
          <serverVariables>
            <set name="HTTP_X_Forwarded_For" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_Forwarded_Proto" value="http" />
          </serverVariables>
        </rule>
        <!-- Ensure root URL '/' serves index.html even if Default Document is off -->
        <rule name="Root To Index" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="/index.html" />
        </rule>
        <rule name="SPA Fallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Keep API paths out of SPA rewrite -->
            <add input="{REQUEST_URI}" pattern="^/(api|swagger)" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
